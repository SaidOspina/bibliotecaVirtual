<body data-typography="poppins" data-theme-version="light" data-layout="vertical">


    <div id="main-wrapper">

        <!--********** navbar horizontal*************-->
        {{>navbarhor}}

        <!--********** navbar vertical*************-->
        {{> navbarBiblio}}

       <div class="content-body">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Ejemplares</h5>
                    <br><br>
                    <div class="table-responsive">
                        <table id="example" class="table table-striped" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Id Inventario</th>
                                    <th>Nombre</th>
                                    <th>Fecha</th>
                                    <th>Estado</th>
                                    <th>Costo del ejemplar</th>
                                    <th>Registro de Daños</th>
                                    <th>Libro ISBN</th>
                                    <th>Eliminar</th>
                                    <th>Modificar</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each ejemplar}}
                                <tr>
                                    <td>{{idInventario}}</td>
                                    <td>{{nombre}}</td>
                                    <td>{{fecha}}</td>
                                    <td>{{estado}}</td>
                                    <td>{{costoEjemplar}}</td>
                                    <td>{{registroDaños}}</td>
                                    <td>{{libroISBN}}</td>
                                    <td>
										<form action="/eliminarEjemplar" method="POST">
											<input type="hidden" name="idInventario" value="{{idInventario}}">
											<button type="submit" class="btn btn-danger btn-sm">
												<em class="icon ni ni-trash"></em>
												<span>Eliminar</span>
											</button>
										</form>
									</td>
                                    <td>
										<form action="/modificarEjemplar" method="POST">
											<input type="hidden" name="idInventario" value="{{idInventario}}">
											<button type="submit" class="btn btn-danger btn-sm">
												<em class="icon ni ni-trash"></em>
												<span>Actualizar</span>
											</button>
										</form>
									</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>


    </div>

    <!--**********************************
            Content body end
        ***********************************-->


    <!--**********************************
            Footer start
        ***********************************-->
    {{> footerhor}}


    </div>
